
<h1 style="text-indent: 50px;">May all of your <em>manifestations</em> come to fruition</h1>

<% if logged_in? %>
     <p style="font-size:14pt; text-indent:50px;"><strong>Current User: <%= current_user.username %></strong></p>
<% end %>

<% @dreams.each do |dream|%>
    <div>
        <ul style="list-style: none;">
            <li> <a href="/dreams/<%= dream.id %>" style="font-size:13pt; color:black; text-decoration: none;"> 
                <%= dream.title %><br>
                <%= dream.entry_date %><br>
                <%= dream.content %><br>
                <br>
            </li>
        </ul>   
    </div>
<% end %>
